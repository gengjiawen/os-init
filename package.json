{
  "name": "@gengjiawen/os-init",
  "private": false,
  "version": "1.3.1",
  "description": "",
  "main": "index.js",
  "bin": {
    "os-init": "bin/bin.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "server": "nodemon --exec ts-node libs/index.ts",
    "prepare": "husky install",
    "clean": "rimraf build",
    "format": "prettier --write \"{examples,libs,script,bin}/**/*.{js,ts}\" \"**/*.yml\"",
    "format:check": "prettier --list-different \"{examples,libs,script,bin}/**/*.{js,ts}\" \"**/*.yml\"",
    "test": "jest",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "postbuild": "cpy '**/*' '!**/*.ts' ../build/ --cwd=libs --parents"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "execa": "^8.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">22.12.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "24.1.0",
    "cpy-cli": "^4.2.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "3.1.4",
    "prettier": "3.5.3",
    "rimraf": "5.0.5",
    "ts-jest": "29.2.4",
    "ts-node": "^10.9.1",
    "typescript": "5.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css,html,yml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
